<form action="/tasks" method="post" class="form-inline">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="task[title]" id="title" class="form-control mb-2 mr-sm-2" placeholder="Title">
  <input type="text" name="task[details]" id="details" class="form-control mb-2 mr-sm-2" placeholder="Details">
  <input type="checkbox" id="completed" name="task[completed]" value="completed" class="form-control mb-2 mr-sm-2">
  <input type="submit" class="btn btn-success">
</form>



